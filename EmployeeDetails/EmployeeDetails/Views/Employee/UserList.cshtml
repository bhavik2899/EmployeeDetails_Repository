@model IEnumerable<EmployeeDetails.Models.UserModel>
@{
	ViewBag.Title = "UserList";
	var isCreate = Convert.ToBoolean(TempData["IsCreate"]);
	var isUpdate = Convert.ToBoolean(TempData["IsUpdate"]);
	var isDelete = Convert.ToBoolean(TempData["ISDelete"]);
}

<div class="d-flex justify-content-between mb-2">
	<h2 class="page-title">User Details</h2>
	@if (isCreate != false)
	{
		@Html.ActionLink("Add Users", "AddEditUser", "Employee", new { @class = "btn btn-danger mt-2 px-2 py-1 h-50" })
	}
</div>

<table class="w-100 table-bordered mt-3">
	<thead>
		<tr>
			<th class="th">
				Sr.
			</th>
			<th class="th">
				@Html.Label("User Name")
			</th>
			<th class="th">
				@Html.Label("First Name")
			</th>
			<th class="th">
				@Html.Label("Last Name")
			</th>
			<th class="th">
				@Html.Label("Mobile No")
			</th>
			<th class="th">
				@Html.Label("Role Name")
			</th>
		</tr>
	</thead>
	@{ int count = 1;}
	@foreach (var item in Model)
	{
		<tr>
			<td>@count</td>
			<td>
				@item.UserName
			</td>
			<td>
				@item.FName
			</td>
			<td>
				@item.LName
			</td>
			<td>
				@item.MobileNo
			</td>
			<td>
				@item.RoleName
			</td>
			<td>
				@if (isUpdate != false)
				{
					@Html.ActionLink("Edit", "AddEditUser", new { @id = @item.UserID }, new { @class = "btn btn-secondary px-2 py-0 mr-2" })
				}
				@if (isDelete != false)
				{
					@Html.ActionLink("Delete", "DeleteUser", new { id = @item.UserID }, new { @class = "btn btn-secondary px-2 py-0 ", onclick = "return confirm('Are you sure you wish to delete this User Details?');" })
				}
			</td>
		</tr>
		count++;
	}
</table>